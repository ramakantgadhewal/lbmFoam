FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "f.*"
    {
        solver           PBiCG;
        preconditioner   DILU;
        smoother         DIC;

        tolerance       1e-15;
        relTol          1e-3;
        maxIter         100;
    }

	"(f.*)Final"
	{
		$("f.*");
    solver           PBiCG;
    preconditioner   DILU
    smoother         DIC;

    tolerance       1e-15;
    relTol          1e-3;
    maxIter         100;
	}

}

PIMPLE
{
    nNonOrthogonalCorrectors 0;
    nCorrectors         3;
}


